<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="5dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student ID: "
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black">

                </TextView>
                <TextView
                    android:id="@+id/txt_studentID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="21WMR05250"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:inputType="textMultiLine"
                    android:maxLines="4" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recharge Amount: "
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black">

                </TextView>
                <TextView
                    android:id="@+id/txt_rechargeAmount"
                    android:text="RM10"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number: "
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black">

                </TextView>
                <TextView
                    android:id="@+id/txt_studPhoneNumber"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_rechargeDate"
            android:text="21-09-2022 07:22"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:layout_margin="3dp"
            android:layout_gravity="top"
            android:layout_width="115dp"
            android:layout_height="20dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>